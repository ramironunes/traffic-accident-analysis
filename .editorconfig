# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation for Python
[*.py]
indent_style = space
indent_size = 4

# 2 space indentation for JSON, YAML, TypeScript, and Angular HTML
[*.{json,yml,yaml,ts,html}]
indent_style = space
indent_size = 2

# 2 space indentation for JavaScript and CSS
[*.{js,css}]
indent_style = space
indent_size = 2

# 4 space indentation for C, C++, C#
[*.{c,h,cpp,hpp,cxx,hxx,cs}]
indent_style = space
indent_size = 4

# 4 space indentation for Java
[*.java]
indent_style = space
indent_size = 4

# 4 space indentation for Rust
[*.rs]
indent_style = space
indent_size = 4

# 2 space indentation for R
[*.r]
indent_style = space
indent_size = 2

# Tab indentation for Makefiles
[Makefile]
indent_style = tab

# Markdown files
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

# Ignore binary files
[*.{png,jpg,jpeg,gif}]
binary = true
